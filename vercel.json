{
  "version": 2,
  "builds": [
    { "src": "package.json", "use": "@vercel/static-build" },
    { "src": "backend/server.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "backend/server.js" },
    { "src": "^/static/(.*)", "dest": "/static/$1" },
    { "handle": "filesystem" },
    { "src": ".*", "dest": "/index.html" }
  ]
}
